<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/title_home" />

    <Button
        android:id="@+id/time_training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time training"/>

    <Button
        android:id="@+id/calorie_training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="calorie_training" />

    <Button
        android:id="@+id/heartrate_training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="heartrate_training" />

    <Button
        android:id="@+id/distance_training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="distance_training" />

    <Button
        android:id="@+id/free_training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="free_training" />
